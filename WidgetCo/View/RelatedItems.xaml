<UserControl x:Class="WidgetCo.View.RelatedItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:viewModels="clr-namespace:WidgetCo.ViewModels">
    <ListBox Grid.Row="2" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding RelatedItems}" Name="relatedItems" Width="Auto" Height="Auto"/>

</UserControl>
